{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "test:e2e": {
      "dependsOn": ["build"]
    },
    "//#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    }
  },
  "globalDependencies": ["package.json", "pnpm-lock.yaml", "turbo.json"]
} 